{# src/Social/WallBundle/Resources/views/layout.html.twig  #}

{% extends "::layout.html.twig" %}

{% block body %}

	<div class="span7 offset-8" >
	
	
		<ul class="nav nav-pills">
		  <li class="active"><a href="{{ path('all_photos') }}">my photos</a></li>
		  	{% if app.user.id == app.session.get('pageUserId') %}
			  	<li><a href="{{ path('add_photos') }}">add photos</a></li>
			  	<li><a href="{{ path('create_album') }}">create album</a></li>
		  	{% endif %}
		</ul>
    </div>
	
	<div class="span7 offset-8">

		<h4> {{photo.name}} </h4>
		<a href="{{ path('sup_photos', { 'id': photo.id, 'type':'Photo' }) }}" id="photo_action">Delete</a> | <a href="{{ path('avatar_select', { 'filename': photo.url}) }}">Set as avatar</a>
		<br>
		<img src="{{ asset('img/uploads/%s') |format(photo.url)}}" alt="test">
		<br><br>
		{{photo.description}}
		
					
		
    </div>
{% endblock %}