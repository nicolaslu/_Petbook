{# src/Social/UserBundle/Resources/views/layout.html.twig  #}

{% extends "::layout.html.twig" %}

{% block body %}
	<table class="table table-striped table-hover " id="tableUser">
	  <tbody>
	  	{% for item in users %}
		    <tr>
		      <td width="20%"><img src="{{asset('img/uploads/%s') | format( item.path)}}" alt="avatar" id="avatarListe"/></td>
		      <td style="vertical-align:middle" width="20%"><a href="{{ path('social_redirect', {'id': item.id, 'path':item.path, 'username': item.username})}}" id="pseudo">{{item.username}}</a></td>
		    </tr>
		{% endfor %}
	  </tbody>
	</table> 
{% endblock %}